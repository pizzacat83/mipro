{
    "tasks": [
        {
            "type": "process",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-fsanitize=undefined",
                "-Wall",
                "-Wextra",
                "-Wconversion"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}